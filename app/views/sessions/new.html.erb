<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |form| %>
    <div>
        <%= form.label :email %>
        <%= form.email_field :email, required: true %>
    </div>

    <div>
        <%= form.label :password %>
        <%= form.password_field :password, required: true %>
    </div>

    <div>
        <%= form.submit "ログイン" %>
    </div>
<% end %>
