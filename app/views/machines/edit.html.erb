<h1 class="px-4 py-2 text-3xl font-bold text-gray-800 mt-6 mb-6 text-center">織機編集</h1>

<%= form_with(model: @machine, local: true) do |form| %>
<section class="px-24">
    <div class="px-4 py-2 overflow-x-auto mb-6 whitespace-nowrap">
        <% if @machine.errors.any? %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                <h4 class="font-bold mb-2"><%= pluralize(@machine.errors.count, "error") %>が発生しました:</h4>
                <ul class="list-disc pl-5">
                    <% @machine.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <table class="w-full max-w-sm">
            <div class="md:flex md:items-center mb-6">
                <div class="md:w-1/3 py-2">
                    <label class="w-1/3 px-4 py-2 text-gray-700 font-bold text-center">
                        <%= form.label :name, "織機名" %>
                    </label>
                </div>
                <div class="md:w-2/3">
                    <%= form.text_field :name, class: "block w-full rounded-md bg-white px-4 py-2 text-base text-gray-900 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm appearance-none" %>
                </div>
            </div>
            <div class="md:flex md:items-center mb-6">
                <div class="md:w-1/3 py-2">
                    <label class="w-1/3 px-4 py-2 text-gray-700 font-bold text-center">
                        <%= form.label :machine_type_id, "織機のタイプ" %>
                    </label>
                </div>
                <div class="md:w-2/3">
                    <%= form.collection_select :machine_type_id, MachineType.all.order(:id), :id, :name,
                        { prompt: "織機のタイプを選択してください"},
                        { class: "block w-full rounded-md bg-white px-4 py-2 text-base text-gray-900 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm appearance-none" } %>
                </div>
            </div>
            <div class="md:flex md:items-center mb-6">
                <div class="md:w-1/3 py-2">
                    <label class="w-1/3 px-4 py-2 text-gray-700 font-bold text-center">
                        <%= form.label :machine_status_id, "稼働状況" %>
                    </label>
                </div>
                <div class="md:w-2/3">
                    <%= form.collection_select :machine_status_id, MachineStatus.all, :id, :name,
                        { prompt: "稼働状況を選択してください", selected: @machine.machine_assignments.first&.machine_status_id },
                        { class: "block w-full rounded-md bg-white px-4 py-2 text-base text-gray-900 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm appearance-none" } %>
                </div>
            </div>
        </table>
    </div>
</section>

<section class="mb-12">
    <div class="flex justify-center space-x-2">
        <div class="px-2 py-2">
            <%= form.submit '更新', class: "inline-block px-4 py-2 bg-purple-500 text-white rounded hover:bg-purple-700" %>
        </div>
        <div class="px-2 py-2">
            <%= link_to '戻る', machine_path(@machine), class: "inline-block px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-700" %>
        </div>
    </div>
</section>
<% end %>
