<h1 class="px-4 py-2 text-3xl font-bold text-gray-800 mt-6 mb-6 text-center">新規織機追加</h1>

<%= form_with model: @machine, url: machines_path, local: true do |f| %>
<section class="px-24">
    <div class="px-4 py-2 overflow-x-auto mb-6 whitespace-nowrap">
        <table class="w-full max-w-sm">
            <div class="md:flex md:items-center mb-6">
                <div class="md:w-1/3 py-2">
                    <label class="w-1/3 px-4 py-2 text-gray-700 font-bold text-center">
                        <%= f.label :name, '織機名' %>
                    </label>
                </div>
                <div class="md:w-2/3">
                    <%= f.text_field :name, required: true, class: "block w-full rounded-md bg-white px-4 py-2 text-base text-gray-900 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm appearance-none" %>
                </div>
            </div>
            <div class="md:flex md:items-center mb-6">
                <div class="md:w-1/3 py-2">
                    <label class="w-1/3 px-4 py-2 text-gray-700 font-bold text-center">
                        <%= f.label :machine_type_id, '織機の種類' %>
                    </label>
                </div>
                <div class="md:w-2/3">
                    <%= f.collection_select :machine_type_id, MachineType.all, :id, :name,
                        { prompt: "織機のタイプを選択してください" },
                        { class: "block w-full rounded-md bg-white px-4 py-2 text-base text-gray-900 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm appearance-none" } %>
                </div>
            </div>
        </table>
    </div>
</section>

<section class="mb-12">
    <div class="flex justify-center space-x-2">
        <div class="px-2 py-2">
            <%= f.submit '作成', class: "inline-block px-4 py-2 bg-purple-500 text-white rounded hover:bg-purple-700" %>
        </div>
        <div class="px-2 py-2">
            <%= link_to '戻る', machines_path, class: "inline-block px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-700" %>
        </div>
    </div>
</section>
<% end %>
