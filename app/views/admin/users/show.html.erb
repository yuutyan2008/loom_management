<h1 class="px-4 py-2 text-3xl font-bold text-gray-800 mt-6 mb-6 text-center">ユーザー情報</h1>
<!-- ログイン情報表示セクション -->
<% if flash[:password] %>
    <section class="px-4 sm:px-8 lg:px-24">
        <div class="mx-auto w-full max-w-md bg-yellow-100 rounded-lg p-6 sm:p-8 lg:max-w-lg">
            <p class="py-4 text-center text-xl text-rose-500">この情報は一度だけ表示されます。</p>
            <h2 class="text-center text-xl font-semibold text-gray-800 sm:text-2xl mt-4 mb-4">ログイン情報</h2>
            <p class="text-gray-700"><strong>メールアドレス:</strong> <%= flash[:email] %></p>
            <p class="text-gray-700"><strong>パスワード:</strong> <%= flash[:password] %></p>
        </div>
    </section>
<% end %>

<section>
    <div class="px-4 py-2 overflow-x-auto mb-6 whitespace-nowrap">
        <table class="min-w-full border border-gray-300 bg-gray-50">
        <tbody>
            <tr class="bg-gray-100 border-b">
                <th class="w-1/3 px-4 py-2 text-center text-gray-700">名前</th>
                <td class="w-2/3 px-4 py-2 text-gray-900 bg-white"><%= @user&.name %></td>
            </tr>
            <tr class="bg-gray-100 border-b">
                <th class="w-1/3 px-4 py-2 text-center text-gray-700">メールアドレス</th>
                <td class="w-2/3 px-4 py-2 text-gray-900 bg-white"><%= @user&.email %></td>
            </tr>
            <tr class="bg-gray-100 border-b">
                <th class="w-1/3 px-4 py-2 text-center text-gray-700">電話番号</th>
                <td class="w-2/3 px-4 py-2 text-gray-900 bg-white"><%= @user&.phone_number %></td>
            </tr>
            <tr class="bg-gray-100 border-b">
                <th class="w-1/3 px-4 py-2 text-center text-gray-700">会社名</th>
                <td class="w-2/3 px-4 py-2 text-gray-900 bg-white"><%= @user&.company&.name %></td>
            </tr>
        </tbody>
        </table>
    </div>
</section>

<section class="mb-12">
    <div class="flex justify-center space-x-2">
        <div class="px-2 py-2">
        <%= link_to '編集', edit_admin_user_path(@user), class: "inline-block px-4 py-2 bg-teal-500 text-white rounded hover:bg-teal-600" %>
        </div>
        <div class="px-2 py-2">
        <%= link_to '戻る', admin_users_path, class: "inline-block px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-700" %>
        </div>
    </div>
</section>
