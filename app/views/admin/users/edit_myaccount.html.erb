<h1 class="px-4 py-2 text-3xl font-bold text-gray-800 mt-6 mb-6 text-center">ユーザー情報編集</h1>

<%= form_with model: @user, url: update_myaccount_admin_users_path, local: true do |f| %>
    <section class="px-24">
        <div class="px-4 py-2 overflow-x-auto mb-6 whitespace-nowrap">
            <table class="w-full max-w-sm">
                <div class="md:flex md:items-center mb-6">
                    <div class="md:w-1/3 py-2">
                        <label class="w-1/3 px-4 py-2 text-gray-700 font-bold text-center">
                        <%= f.label :name, 'ユーザー名' %>
                        </label>
                    </div>
                    <div class="md:w-2/3">
                        <%= f.text_field :name, class: "block w-full rounded-md bg-white px-4 py-2 text-base text-gray-900 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm appearance-none" %>
                    </div>
                </div>
                <div class="md:flex md:items-center mb-6">
                    <div class="md:w-1/3 py-2">
                        <label class="w-1/3 px-4 py-2 text-gray-700 font-bold text-center">
                        <%= f.label :email, 'メールアドレス' %>
                        </label>
                    </div>
                    <div class="md:w-2/3">
                        <%= f.email_field :email, class: "block w-full rounded-md bg-white px-4 py-2 text-base text-gray-900 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm appearance-none" %>
                    </div>
                </div>
                <div class="md:flex md:items-center mb-6">
                    <div class="md:w-1/3 py-2">
                        <label class="w-1/3 px-4 py-2 text-gray-700 font-bold text-center">
                        <%= f.label :phone_number, '電話番号' %>
                        </label>
                    </div>
                    <div class="md:w-2/3">
                        <%= f.text_field :phone_number, class: "block w-full rounded-md bg-white px-4 py-2 text-base text-gray-900 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm appearance-none" %>
                    </div>
                </div>
                <% if current_user == @user %>
                    <div class="md:flex md:items-center mb-6">
                        <div class="md:w-1/3 py-2">
                        <label class="w-1/3 px-4 py-2 text-gray-700 font-bold text-center">
                            <%= label_tag :current_password, '現在のパスワード' %>
                        </label>
                        </div>
                        <div class="md:w-2/3">
                            <%= password_field_tag :current_password, nil, class: "block w-full rounded-md bg-white px-4 py-2 text-base text-gray-900 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm appearance-none", autocomplete: "new-password" %>
                        </div>
                    </div>
                    <div class="md:flex md:items-center mb-6">
                        <div class="md:w-1/3 py-2">
                        <label class="w-1/3 px-4 py-2 text-gray-700 font-bold text-center">
                            <%= label_tag :new_password, '新しいパスワード' %>
                        </label>
                        </div>
                        <div class="md:w-2/3">
                            <%= password_field_tag :new_password, nil, class: "block w-full rounded-md bg-white px-4 py-2 text-base text-gray-900 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm appearance-none", autocomplete: "new-password" %>
                        </div>
                    </div>
                    <div class="md:flex md:items-center mb-6">
                        <div class="md:w-1/3 py-2">
                        <label class="w-1/3 px-4 py-2 text-gray-700 font-bold text-center">
                            <%= label_tag :new_password_confirmation, '新しいパスワード（確認用)' %>
                        </label>
                        </div>
                        <div class="md:w-2/3">
                            <%= password_field_tag :new_password_confirmation, nil, class: "block w-full rounded-md bg-white px-4 py-2 text-base text-gray-900 border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm appearance-none", autocomplete: "new-password" %>
                        </div>
                    </div>
                <% end %>
            </table>
        </div>
    </section>

    <!-- フォーム送信・戻るボタン -->
    <section class="mb-12">
        <div class="flex justify-center space-x-2">
        <div class="px-2 py-2">
            <%= f.submit '更新', class: "inline-block px-4 py-2 bg-purple-500 text-white rounded hover:bg-purple-700" %>
        </div>
        <div class="px-2 py-2">
            <%= link_to '戻る', admin_users_path, class: "inline-block px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-700" %>
        </div>
        </div>
    </section>
<% end %>
