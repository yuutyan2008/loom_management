<h1 class="px-4 py-2 text-3xl font-bold text-gray-800 mt-6 mb-6 text-center">問屋側の製造見込み日数</h1>
<section class="mb-12">
  <h2 class="px-4 text-2xl text-gray-700 font-semibold mb-4">ドビー</h2>
  <div class="px-4 pb-2 relative overflow-x-auto whitespace-nowrap sm:rounded-lg">
    <table class="flex-none w-full text-md border text-left rtl:text-right border-gray-300">
      <thead class="uppercase">
        <tr class="bg-gray-100">
          <th scope="col" class="py-2 px-4 text-gray-700 border-b">工程</th>
          <th scope="col" class="py-2 px-4 text-gray-700 border-b">最短の完了日時</th>
          <th scope="col" class="py-2 px-4 text-gray-700 border-b">最長の完了日時</th>
        </tr>
      </thead>
      <tbody>
        <% @dobbie_estimates.each do |estimate| %>
        <tr class="hover:bg-gray-50">
          <td class="py-2 px-4 text-gray-700 border-b"><%= estimate&.work_process_definition.name || "未設定" %></td>
          <td class="py-2 px-4 text-gray-700 border-b"><%= estimate&.earliest_completion_estimate || "未設定" %></td>
          <td class="py-2 px-4 text-gray-700 border-b"><%= estimate&.latest_completion_estimate || "未設定" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

<section class="mb-12">
  <h2 class="px-4 text-2xl text-gray-700 font-semibold mb-4">ジャガード</h2>
  <div class="px-4 pb-2 relative overflow-x-auto whitespace-nowrap sm:rounded-lg">
    <table class="flex-none w-full text-md border text-left rtl:text-right border-gray-300">
      <thead class="uppercase">
        <tr class="bg-gray-100">
          <th scope="col" class="py-2 px-4 text-gray-700 border-b">工程</th>
          <th scope="col" class="py-2 px-4 text-gray-700 border-b">最短の完了日時</th>
          <th scope="col" class="py-2 px-4 text-gray-700 border-b">最長の完了日時</th>
        </tr>
      </thead>
      <tbody>
        <% @jacquard_estimates.each do |estimate| %>
        <tr class="hover:bg-gray-50">
          <td class="py-2 px-4 text-gray-700 border-b"><%= estimate&.work_process_definition.name || "未設定" %></td>
          <td class="py-2 px-4 text-gray-700 border-b"><%= estimate&.earliest_completion_estimate || "未設定" %></td>
          <td class="py-2 px-4 text-gray-700 border-b"><%= estimate&.latest_completion_estimate || "未設定" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

<section class="mb-12">
  <div class="flex justify-center space-x-2">
    <div class="px-2 py-2">
      <%= link_to "編集", edit_all_admin_process_estimates_path, class: "inline-block px-4 py-2 bg-teal-500 text-white rounded hover:bg-teal-600" %>
    </div>
  </div>
</section>
